# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,php}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 2

[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab